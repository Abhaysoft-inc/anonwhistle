# Environment Variables
NODE_ENV=development
PORT=5000

# Database
# For local MongoDB (requires MongoDB to be installed and running):
# MONGODB_URI=mongodb://localhost:27017/anonwhistle

# For MongoDB Atlas (cloud) - replace with your connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/anonwhistle?retryWrites=true&w=majority

# Temporary in-memory database for development (requires mongodb-memory-server):
MONGODB_URI=mongodb://127.0.0.1:27017/anonwhistle

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100